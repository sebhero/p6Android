<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:custom="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <se.mah.kirby.Color.IntDisplay android:layout_width="wrap_content" android:layout_height="wrap_content"
                                   android:id="@+id/intDisplay"

    />

    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Random numbers"
                android:onClick="getRandomNumbers"/>

        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="Increasing numbers"
                android:onClick="getIncreasingNumbers"/>
    </LinearLayout>
    <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="Switch to ColorText"
            android:onClick="switchToColorTextView"/>

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Shift Choices"
            android:id="@+id/textView"/>
    <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:orientation="horizontal">
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="right"
                android:onClick="shiftRight"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="left"
                android:onClick="shiftLeft"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="up"
                android:onClick="shiftUp"
        />
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:text="down"
                android:onClick="shiftDown"
        />
    </LinearLayout>


</LinearLayout>